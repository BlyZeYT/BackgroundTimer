<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <PackageId>BlyZe.$(AssemblyName)</PackageId>
    <Authors>BlyZe</Authors>
    <PackageIcon>icon.png</PackageIcon>
    <Description>An easy to use timer that runs in the background and provides useful functions like Callbacks and States.</Description>
    <RepositoryUrl>https://github.com/BlyZeYT/BackgroundTimer</RepositoryUrl>
    <PackageTags>timer;backgroundtimer;stopwatch;async;asynctimer;blyze;background timer; async timer;</PackageTags>
    <PackageProjectUrl>https://github.com/BlyZeYT/BackgroundTimer</PackageProjectUrl>
    <Product>Background Timer</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>3.0.0</Version>
    <PackageReleaseNotes>Complete rewrite of the background timer</PackageReleaseNotes>
    <Title>BlyZe.$(AssemblyName)</Title>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
